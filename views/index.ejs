<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Markdown Blog</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <div class="container">
      <header>
        <h1>Markdown Blog</h1>
        <a class="new" href="/new">+ New Post</a>
      </header>

      <main>
        <% if (posts.length === 0) { %>
          <p>No posts yet. Create one!</p>
        <% } else { %>
          <ul class="posts">
            <% posts.forEach(post => { %>
              <li><a href="/post/<%= post.filename %>"><%= post.title %></a></li>
            <% }); %>
          </ul>
        <% } %>
      </main>

      <footer>
        <p>Simple Markdown blog â€” posts are stored in the <code>posts/</code> folder.</p>
      </footer>
    </div>
  </body>
</html>
