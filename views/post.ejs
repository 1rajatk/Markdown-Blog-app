<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %> — Markdown Blog</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <div class="container">
      <header>
        <h1><a href="/">Markdown Blog</a></h1>
        <a class="new" href="/new">+ New Post</a>
      </header>

      <main class="post-content">
        <article>
          <%- html %>
        </article>
      </main>

      <footer>
        <p><a href="/">← Back to posts</a></p>
      </footer>
    </div>
  </body>
</html>
